{% extends 'base.html.twig' %}

{% block title %}Todas Mis Tareas{% endblock %}

{% block body %}

    <div class="example-wrapper">
      <h2>{{ task.title }}</h2>
        <p class="data-task">
            {{ task.user.name }}  {{ task.user.lastName }} | {{ task.createdAt|date('d-m-y h:i') }} |
            {% if task.priority == 'HIGH' %}
                {{ 'Alta' }}

            {% elseif  task.priority == 'MEDIUM'%}
                {{ 'Media' }}

            {% elseif  task.priority == 'LOW'%}
                {{ 'Baja' }}
            {% endif %} |
             {{ task.hours ~ ' Hrs' }}
        </p>
        <p>
            {{ task.content }}
        </p>
    </div>
{% endblock %}
